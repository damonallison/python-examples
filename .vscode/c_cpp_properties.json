//
// c_cpp_properties.json allows you to control compiler settings.
//
{
    "env": {
        "myIncludePath": [
            "/opt/homebrew/include"
        ]
    },
    "configurations": [
        {
            "name": "mac",
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
            ],
            "intelliSenseMode": "macos-clang-x64",
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "includePath": [
                "${myIncludePath}"
            ]
        }
    ],
    "version": 4
}