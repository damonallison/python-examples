{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            // selects the output parser to use for finding errors and warnings
            // in compiler output. For clang, the `$gcc` problem matcher creates
            // the best results.
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                // whichever task is marked as `default` is the one used by the
                // C/C++ "play" button.
                "isDefault": true
            },
            // the value you see in the tasks list
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}